<nav class="sticky top-0 z-50 backdrop-blur-md bg-parchment-50/80 dark:bg-midnight-950/80 border-b border-deep-teal-200 dark:border-midnight-800 transition-colors duration-300">
  <div class="max-w-6xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      
      <!-- Logo/Brand -->
      <a href="/" class="group flex items-center space-x-2">
        <div class="w-8 h-8 bg-gradient-to-br from-burnt-orange-500 to-deep-teal-500 rounded-sm flex items-center justify-center transform group-hover:rotate-12 transition-transform duration-300">
          <span class="text-parchment-50 font-display text-lg font-bold">N</span>
        </div>
        <span class="font-display text-xl font-semibold text-gray-800 dark:text-parchment-100 tracking-wide">
          Nemorathwald
        </span>
      </a>

      <!-- Desktop Navigation -->
      {% set navPages = collections.all | eleventyNavigation %}
      <div class="hidden md:flex items-center space-x-1">
        {% for entry in navPages %}
          <a
            href="{{ entry.url }}"
            class="px-4 py-2 rounded-lg font-sans text-sm font-medium transition-all duration-200
            {% if (entry.url in page.url and entry.url != '/') or (page.url == '/' and entry.url == '/')  %}
              bg-gold-ochre-100 dark:bg-gold-ochre-900/30 text-gold-ochre-800 dark:text-gold-ochre-200 shadow-sm
            {% else %}
              text-gray-600 dark:text-parchment-300 hover:bg-burnt-orange-50 dark:hover:bg-burnt-orange-900/20 hover:text-burnt-orange-700 dark:hover:text-burnt-orange-300
            {% endif %}">
            {{ entry.title }}
          </a>
        {% endfor %}
      </div>

      <!-- Dark mode toggle -->
      <div class="flex items-center space-x-2">
        <button 
          class="p-2 rounded-lg text-gray-600 dark:text-parchment-300 hover:bg-burnt-orange-50 dark:hover:bg-burnt-orange-900/20 hover:text-burnt-orange-600 dark:hover:text-burnt-orange-400 transition-colors duration-200" 
          onclick="toggleDarkMode()" 
          id="theme-toggle" 
          type="button"
          aria-label="Toggle dark mode">
          <svg id="theme-toggle-dark-icon" class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
          <svg id="theme-toggle-light-icon" class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
          </svg>
        </button>
        
        <!-- Mobile menu button -->
        <button 
          class="md:hidden p-2 rounded-lg text-gray-600 dark:text-parchment-300 hover:bg-burnt-orange-50 dark:hover:bg-burnt-orange-900/20 hover:text-burnt-orange-600 dark:hover:text-burnt-orange-400 transition-colors duration-200"
          onclick="toggleMobileMenu()"
          id="mobile-menu-button"
          aria-label="Toggle mobile menu">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-deep-teal-200 dark:border-midnight-800">
      <div class="flex flex-col space-y-2 mt-4">
        {% for entry in navPages %}
          <a
            href="{{ entry.url }}"
            class="px-4 py-2 rounded-lg font-sans text-sm font-medium transition-all duration-200
            {% if (entry.url in page.url and entry.url != '/') or (page.url == '/' and entry.url == '/')  %}
              bg-gold-ochre-100 dark:bg-gold-ochre-900/30 text-gold-ochre-800 dark:text-gold-ochre-200 shadow-sm
            {% else %}
              text-gray-600 dark:text-parchment-300 hover:bg-burnt-orange-50 dark:hover:bg-burnt-orange-900/20 hover:text-burnt-orange-700 dark:hover:text-burnt-orange-300
            {% endif %}">
            {{ entry.title }}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</nav>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  }
</script>
